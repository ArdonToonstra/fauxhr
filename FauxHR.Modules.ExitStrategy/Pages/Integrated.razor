@page "/acp/integrated"
@using FauxHR.Core.Services
@using FauxHR.Modules.ExitStrategy.Services
@using Hl7.Fhir.Model
@using Hl7.Fhir.Serialization
@using Task = System.Threading.Tasks.Task
@using System.IO
@using Blazored.LocalStorage
@inject AppState AppState
@inject ILocalStorageService LocalStorage
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>ACP - Integrated View</PageTitle>

<div class="container-fluid py-4">
    <!-- Header with navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="display-6 fw-bold text-primary mb-1">
                <i class="bi bi-file-earmark-text me-3"></i>Uniform Advance Care Planning
            </h2>
            <p class="lead text-muted mb-0">Proactieve zorgplanning (ACP)</p>
        </div>
        <button class="btn btn-outline-secondary" @onclick='() => Navigation.NavigateTo("acp/overview")'>
            <i class="bi bi-arrow-left me-2"></i>Back to Overview
        </button>
    </div>

    @if (AppState.CurrentPatient == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Please select a patient from the Dashboard.
        </div>
    }
    else if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-3">Loading ACP data...</p>
        </div>
    }
    else if (acpData == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No ACP data found. Please return to Overview and pull the latest information.
        </div>
    }
    else
    {
        <!-- Main Form Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <!-- Patient & Encounter Header -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label class="text-muted small">Naam patiÃ«nt</label>
                            <div class="fw-bold fs-5">@GetPatientName()</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Geboortedatum</label>
                                <div>@GetPatientBirthDate()</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Datum van invullen</label>
                                <div>@GetEncounterDate()</div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="text-muted small d-block mb-1">Gesprek gevoerd door</label>
                            @{
                                var participants = GetParticipants();
                                if (participants.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var p in participants)
                                        {
                                            <button class="btn btn-outline-primary btn-sm rounded-pill" @onclick="() => ShowParticipantDetails(p)">
                                                <i class="bi bi-person me-1"></i>@p.Display
                                            </button>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            }
                        </div>
                    </div>
                    
                    <!-- Legally Capable Indicator -->
                    <div class="col-md-4">
                        <div class="border rounded p-3 @GetLegallyCapableClass()">
                            <div class="small text-muted mb-2">Wilsbekwaamheid</div>
                            <div class="d-flex align-items-center">
                                <i class="@GetLegallyCapableIcon() me-2 fs-4"></i>
                                <div>
                                    <div class="fw-bold">@GetLegallyCapableText()</div>
                                    @if (!string.IsNullOrEmpty(GetLegallyCapableComment()))
                                    {
                                        <small class="text-muted">@GetLegallyCapableComment()</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- QuestionnaireResponses Section -->
                @if (questionnaireResponses.Any())
                {
                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="bi bi-clipboard-data me-2"></i>ACP Formulieren
                        </h5>
                        <div class="list-group">
                            @foreach (var qr in questionnaireResponses.OrderByDescending(q => GetQuestionnaireResponseDate(q)))
                            {
                                <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                                        @onclick="() => ShowQuestionnaireResponse(qr)">
                                    <div>
                                        <div class="fw-bold">@(qr.Authored ?? qr.Id ?? "Unnamed Questionnaire")</div>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3 me-1"></i>@GetQuestionnaireResponseDate(qr)
                                            @if (!string.IsNullOrEmpty(qr.Author?.Display))
                                            {
                                                <span class="ms-3">
                                                    <i class="bi bi-person me-1"></i>@qr.Author.Display
                                                </span>
                                            }
                                        </small>
                                    </div>
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No questionnaire responses found.
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Participant Details Modal -->
@if (selectedParticipant != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@selectedParticipant.Name</h5>
                    <button type="button" class="btn-close" @onclick="CloseParticipantModal"></button>
                </div>
                <div class="modal-body">
                    @if (isResolvingParticipant)
                    {
                        <div class="text-center py-3">
                            <div class="spinner-border text-primary mb-2"></div>
                            <p>Loading details...</p>
                        </div>
                    }
                    else
                    {
                        <dl class="row">
                            @if (!string.IsNullOrEmpty(selectedParticipant.Role))
                            {
                                <dt class="col-sm-4 text-muted">Role</dt>
                                <dd class="col-sm-8 mb-3">@selectedParticipant.Role</dd>
                            }
                            
                            @if (!string.IsNullOrEmpty(selectedParticipant.Specialty))
                            {
                                <dt class="col-sm-4 text-muted">Specialty</dt>
                                <dd class="col-sm-8 mb-3">@selectedParticipant.Specialty</dd>
                            }
                            
                            @if (!string.IsNullOrEmpty(selectedParticipant.Organization))
                            {
                                <dt class="col-sm-4 text-muted">Organization</dt>
                                <dd class="col-sm-8 mb-3">@selectedParticipant.Organization</dd>
                            }

                            @if (!string.IsNullOrEmpty(selectedParticipant.Relationship))
                            {
                                <dt class="col-sm-4 text-muted">Relationship</dt>
                                <dd class="col-sm-8 mb-3">@selectedParticipant.Relationship</dd>
                            }
                            
                            @if (selectedParticipant.Telecoms.Any())
                            {
                                <dt class="col-sm-4 text-muted">Contact</dt>
                                <dd class="col-sm-8 mb-3">
                                    @foreach(var t in selectedParticipant.Telecoms)
                                    {
                                        <div class="mb-1">
                                            <i class="bi bi-@(t.System == ContactPoint.ContactPointSystem.Email ? "envelope" : "telephone") me-2"></i>
                                            @t.Value (@t.Use)
                                        </div>
                                    }
                                </dd>
                            }
                            
                            <dt class="col-sm-4 text-muted">Source</dt>
                            <dd class="col-sm-8">
                                <small class="text-monospace">@selectedParticipant.ResourceType</small>
                            </dd>
                        </dl>
                    }
                </div>
                <!-- Debug Info -->
                <div class="modal-footer justify-content-start bg-light">
                     <small class="text-muted w-100">
                         <strong>Reference:</strong> @selectedParticipant.Reference
                     </small>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private AcpFormData? acpData;
    private List<QuestionnaireResponse> questionnaireResponses = new();
    
    // Participant Modal State
    private ParticipantDetail? selectedParticipant;
    private bool isResolvingParticipant = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadAcpData();
    }
    
    private async Task LoadAcpData()
    {
        isLoading = true;
        
        try
        {
            if (AppState.CurrentPatient == null) return;

            acpData = new AcpFormData();
            var keys = await LocalStorage.KeysAsync();

            // Load Patient (for legally capable extension)
            var patientKey = $"Patient-{AppState.CurrentPatient.Id}";
            var patientKeys = keys.Where(k => k.Contains(patientKey)).ToList(); // Relaxed match
            if (patientKeys.Any())
            {
                var json = await LocalStorage.GetItemAsStringAsync(patientKeys.First());
                if (!string.IsNullOrEmpty(json))
                {
                    var parser = new FhirJsonDeserializer();
                    try { acpData.Patient = parser.Deserialize<Patient>(json); } catch {}
                }
            }
            
            // If Patient not in storage, use current patient from AppState
            if (acpData.Patient == null)
            {
                acpData.Patient = AppState.CurrentPatient;
            }

            // Load Procedure (ACP procedure with encounter reference)
            var procedureKeys = keys.Where(k => k.Contains("Procedure_")).ToList(); // Matches new key format somewhat? or generic check. Checking "Procedure" in key might be safer.
            // Actually, best to iterate and check resourceType if keys are unpredictable.
            // But let's stick to simple "contains Procedure" for now or existing logic.
            // Existing logic: .StartsWith("Procedure-"). New keys: "slug_Procedure_Id". So StartsWith fails.
            
            // Let's make it robust: Filter by inspecting JSON content or fuzzy key match.
            // Fuzzy key match:
            var allProcedures = keys.Where(k => k.Contains("Procedure") && !k.Contains("QuestionnaireResponse")).ToList();
            if (allProcedures.Any())
            {
                var json = await LocalStorage.GetItemAsStringAsync(allProcedures.First());
                if (!string.IsNullOrEmpty(json))
                {
                    var parser = new FhirJsonDeserializer();
                    try { acpData.Procedure = parser.Deserialize<Procedure>(json); } catch {}
                }
            }

            // Load Encounter
            var encounterKeys = keys.Where(k => k.Contains("Encounter")).ToList();
            if (encounterKeys.Any())
            {
                var json = await LocalStorage.GetItemAsStringAsync(encounterKeys.First());
                if (!string.IsNullOrEmpty(json))
                {
                    var parser = new FhirJsonDeserializer();
                    try { acpData.Encounter = parser.Deserialize<Encounter>(json); } catch {}
                }
            }
            
            // Load QuestionnaireResponses
            var qrKeys = keys.Where(k => k.Contains("QuestionnaireResponse")).ToList();
            foreach (var key in qrKeys)
            {
                try
                {
                    var json = await LocalStorage.GetItemAsStringAsync(key);
                    if (!string.IsNullOrEmpty(json))
                    {
                        var parser = new FhirJsonDeserializer();
                        var qr = parser.Deserialize<QuestionnaireResponse>(json);
                        if (qr != null) questionnaireResponses.Add(qr);
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error parsing QuestionnaireResponse {key}: {ex.Message}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading ACP data: {ex.Message}");
        }

        isLoading = false;
        StateHasChanged();
    }

    private async Task<Resource?> FetchResource(string type, string id)
    {
        var parser = new FhirJsonDeserializer();
        var keys = await LocalStorage.KeysAsync();
        
        // Strategy: Look for Key containing "Type" and "Id"
        // New keys: [slug]_[Type]_[Id]
        // Old keys: [Type]-[Id]-[Date]
        
        var key = keys.FirstOrDefault(k => k.Contains(type) && k.Contains(id));
        
        if (key != null)
        {
             var json = await LocalStorage.GetItemAsStringAsync(key);
             if (!string.IsNullOrEmpty(json))
             {
                 try {
                     return parser.Deserialize<Resource>(json);
                 } catch { return null; }
             }
        }
        
        return null;
    }

    private void ShowQuestionnaireResponse(QuestionnaireResponse qr)
    {
        Navigation.NavigateTo($"acp/QuestionnaireResponse/{qr.Id}");
    }

    // --- Participant Logic ---

    private List<ParticipantInfo> GetParticipants()
    {
        var list = new List<ParticipantInfo>();

        // Priority 1: Encounter participants
        if (acpData?.Encounter?.Participant?.Any() == true)
        {
            list.AddRange(acpData!.Encounter!.Participant
                .Where(p => p.Individual != null)
                .Select(p => new ParticipantInfo(p.Individual.Display ?? "Onbekend", p.Individual?.Reference ?? "")));
        }
        
        // Priority 2: Procedure performers (only if list is empty to avoid dupes if both exist)
        if (!list.Any() && acpData?.Procedure?.Performer?.Any() == true)
        {
            list.AddRange(acpData!.Procedure!.Performer
                 .Where(p => p.Actor != null)
                 .Select(p => new ParticipantInfo(p.Actor.Display ?? "Onbekend", p.Actor?.Reference ?? "")));
        }

        return list.DistinctBy(p => p.Reference).ToList(); // De-dupe by reference
    }

    private async Task ShowParticipantDetails(ParticipantInfo info)
    {
        selectedParticipant = new ParticipantDetail
        {
            Name = info.Display,
            Reference = info.Reference
        };
        isResolvingParticipant = true;
        StateHasChanged();

        if (string.IsNullOrEmpty(info.Reference)) 
        {
            isResolvingParticipant = false;
            return;
        }

        try
        {
            // Parse Reference: ResourceType/Id
            var parts = info.Reference.Split('/');
            if (parts.Length < 2) return;
            
            var resourceType = parts[parts.Length - 2];
            var resourceId = parts[parts.Length - 1];

            // 1. Fetch Primary Resource (PractitionerRole or RelatedPerson)
            var resource = await FetchResource(resourceType, resourceId);

            if (resource is PractitionerRole role)
            {
                selectedParticipant.ResourceType = "PractitionerRole";
                
                // Role (Code)
                var roles = role.Code?.SelectMany(c => c.Coding?.Select(coding => coding.Display ?? coding.Code) ?? Enumerable.Empty<string>())
                                     .Concat(role.Code?.Select(c => c.Text) ?? Enumerable.Empty<string>())
                                     .Where(s => !string.IsNullOrEmpty(s))
                                     .Distinct();
                selectedParticipant.Role = roles != null ? string.Join(", ", roles) : null;

                // Specialty
                var specialties = role.Specialty?.SelectMany(c => c.Coding?.Select(coding => coding.Display ?? coding.Code) ?? Enumerable.Empty<string>())
                                           .Concat(role.Specialty?.Select(c => c.Text) ?? Enumerable.Empty<string>())
                                           .Where(s => !string.IsNullOrEmpty(s))
                                           .Distinct();
                selectedParticipant.Specialty = specialties != null ? string.Join(", ", specialties) : null;

                selectedParticipant.Organization = role.Organization?.Display;
                selectedParticipant.Telecoms = role.Telecom;

                // Resolve Practitioner if linked
                if (role.Practitioner?.Reference != null)
                {
                    var practRefParts = role.Practitioner.Reference.Split('/');
                    if (practRefParts.Length >= 2)
                    {
                       var practitioner = await FetchResource("Practitioner", practRefParts.Last()) as Practitioner;
                       if (practitioner != null)
                       {
                            // Prefer Practitioner Name
                            var name = practitioner.Name?.FirstOrDefault();
                            if (name != null)
                            {
                                var given = string.Join(" ", name.Given ?? new string[0]);
                                selectedParticipant.Name = $"{given} {name.Family}".Trim();
                            }
                            
                            // Merge/Prefer Practitioner Telecoms
                            if (practitioner.Telecom != null)
                            {
                                selectedParticipant.Telecoms.AddRange(practitioner.Telecom);
                            }
                       }
                    }
                }
            }
            else if (resource is RelatedPerson related)
            {
                selectedParticipant.ResourceType = "RelatedPerson";
                
                // Relationships (support multiple)
                var rels = related.Relationship?.SelectMany(c => c.Coding?.Select(coding => coding.Display ?? coding.Code) ?? Enumerable.Empty<string>())
                                               .Concat(related.Relationship?.Select(c => c.Text) ?? Enumerable.Empty<string>())
                                               .Where(s => !string.IsNullOrEmpty(s))
                                               .Distinct();
                selectedParticipant.Relationship = rels != null ? string.Join(", ", rels) : null;

                selectedParticipant.Telecoms = related.Telecom;
            }
            else if (resource is Practitioner practitioner)
            {
                 selectedParticipant.ResourceType = "Practitioner";
                 // Prefer Practitioner Name
                var name = practitioner.Name?.FirstOrDefault();
                if (name != null)
                {
                    var given = string.Join(" ", name.Given ?? new string[0]);
                    selectedParticipant.Name = $"{given} {name.Family}".Trim();
                }
                 selectedParticipant.Telecoms = practitioner.Telecom;
            }
        }
        catch (Exception ex)
        {
             Console.WriteLine($"Error resolving participant: {ex.Message}");
        }

        isResolvingParticipant = false;
        StateHasChanged();
    }

    private void CloseParticipantModal()
    {
        selectedParticipant = null;
    }

    // --- Helpers ---
    private string GetQuestionnaireResponseDate(QuestionnaireResponse qr)
    {
        if (!string.IsNullOrEmpty(qr.Authored))
        {
            if (DateTime.TryParse(qr.Authored, out var date))
            {
                return date.ToString("dd-MM-yyyy HH:mm");
            }
        }
        return "Unknown date";
    }

    private string GetPatientName()
    {
        var patient = acpData?.Patient ?? AppState.CurrentPatient;
        if (patient?.Name?.FirstOrDefault() is HumanName name)
        {
            var given = string.Join(" ", name.Given ?? new string[0]);
            return $"{given} {name.Family}".Trim();
        }
        return "Unknown";
    }

    private string GetPatientBirthDate()
    {
        var patient = acpData?.Patient ?? AppState.CurrentPatient;
        if (!string.IsNullOrEmpty(patient?.BirthDate))
        {
            if (DateTime.TryParse(patient.BirthDate, out var date))
            {
                return date.ToString("dd-MM-yyyy");
            }
        }
        return "Unknown";
    }

    private string GetEncounterDate()
    {
        // Priority 1: Encounter period start
        if (acpData?.Encounter?.Period?.Start != null)
        {
            if (DateTime.TryParse(acpData.Encounter.Period.Start, out var date))
            {
                return date.ToString("dd-MM-yyyy");
            }
        }
        
        // Priority 2: Procedure performed date
        if (acpData?.Procedure?.Performed is FhirDateTime dt)
        {
            if (DateTime.TryParse(dt.Value, out var date))
            {
                return date.ToString("dd-MM-yyyy");
            }
        }
        
        return "-";
    }
    
    // --- Legally Capable Utils ---
    private (bool? isCapable, string? comment) GetLegallyCapableInfo()
    {
        var patient = acpData?.Patient;
        if (patient == null) return (null, null);

        var ext = patient.Extension?.FirstOrDefault(e => 
            e.Url == "https://api.iknl.nl/docs/pzp/r4/StructureDefinition/ext-LegallyCapable-MedicalTreatmentDecisions");

        if (ext == null) return (null, null);

        var capableExt = ext.Extension?.FirstOrDefault(e => e.Url == "legallyCapable");
        var commentExt = ext.Extension?.FirstOrDefault(e => e.Url == "legallyCapableComment");

        bool? capable = capableExt?.Value is FhirBoolean fb ? fb.Value : null;
        string? comment = commentExt?.Value is FhirString fs ? fs.Value : null;

        return (capable, comment);
    }

    private string GetLegallyCapableText()
    {
        var (capable, _) = GetLegallyCapableInfo();
        return capable switch
        {
            true => "Wilsbekwaam",
            false => "Niet wilsbekwaam",
            null => "Status onbekend"
        };
    }

    private string GetLegallyCapableComment()
    {
        var (_, comment) = GetLegallyCapableInfo();
        return comment ?? string.Empty;
    }

    private string GetLegallyCapableClass()
    {
        var (capable, _) = GetLegallyCapableInfo();
        return capable switch
        {
            true => "bg-success-subtle border-success",
            false => "bg-danger-subtle border-danger",
            null => "bg-warning-subtle border-warning"
        };
    }

    private string GetLegallyCapableIcon()
    {
        var (capable, _) = GetLegallyCapableInfo();
        return capable switch
        {
            true => "bi bi-check-circle-fill text-success",
            false => "bi bi-x-circle-fill text-danger",
            null => "bi bi-question-circle-fill text-warning"
        };
    }

    private class AcpFormData
    {
        public Patient? Patient { get; set; }
        public Procedure? Procedure { get; set; }
        public Encounter? Encounter { get; set; }
    }
    
    private record ParticipantInfo(string Display, string Reference);
    
    private class ParticipantDetail 
    {
        public string Name { get; set; } = "";
        public string Reference { get; set; } = "";
        public string ResourceType { get; set; } = "";
        public string? Role { get; set; }
        public string? Specialty { get; set; }
        public string? Organization { get; set; }
        public string? Relationship { get; set; }
        public List<ContactPoint> Telecoms { get; set; } = new();
    }
}
