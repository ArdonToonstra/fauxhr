@page "/acp/integrated"
@using FauxHR.Core.Services
@using FauxHR.Modules.ExitStrategy.Services
@using Hl7.Fhir.Model
@using Hl7.Fhir.Serialization
@using Task = System.Threading.Tasks.Task
@using System.IO
@using Blazored.LocalStorage
@inject AppState AppState
@inject ILocalStorageService LocalStorage
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>ACP - Integrated View</PageTitle>

<div class="container-fluid py-4">
    <!-- Header with navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="display-6 fw-bold text-primary mb-1">
                <i class="bi bi-file-earmark-text me-3"></i>Uniform Advance Care Planning
            </h2>
            <p class="lead text-muted mb-0">Proactieve zorgplanning (ACP)</p>
        </div>
        <button class="btn btn-outline-secondary" @onclick='() => Navigation.NavigateTo("/acp/overview")'>
            <i class="bi bi-arrow-left me-2"></i>Back to Overview
        </button>
    </div>

    @if (AppState.CurrentPatient == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Please select a patient from the Dashboard.
        </div>
    }
    else if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-3">Loading ACP data...</p>
        </div>
    }
    else if (acpData == null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No ACP data found. Please return to Overview and pull the latest information.
        </div>
    }
    else
    {
        <!-- Main Form Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <!-- Patient & Encounter Header -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label class="text-muted small">Naam patiÃ«nt</label>
                            <div class="fw-bold fs-5">@GetPatientName()</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Geboortedatum</label>
                                <div>@GetPatientBirthDate()</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Datum van invullen</label>
                                <div>@GetEncounterDate()</div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(GetParticipants()))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Gesprek gevoerd door</label>
                                <div>@GetParticipants()</div>
                            </div>
                        }
                    </div>
                    
                    <!-- Legally Capable Indicator -->
                    <div class="col-md-4">
                        <div class="border rounded p-3 @GetLegallyCapableClass()">
                            <div class="small text-muted mb-2">Wilsbekwaamheid</div>
                            <div class="d-flex align-items-center">
                                <i class="@GetLegallyCapableIcon() me-2 fs-4"></i>
                                <div>
                                    <div class="fw-bold">@GetLegallyCapableText()</div>
                                    @if (!string.IsNullOrEmpty(GetLegallyCapableComment()))
                                    {
                                        <small class="text-muted">@GetLegallyCapableComment()</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- QuestionnaireResponses Section -->
                @if (questionnaireResponses.Any())
                {
                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="bi bi-clipboard-data me-2"></i>Questionnaire Responses
                        </h5>
                        <div class="list-group">
                            @foreach (var qr in questionnaireResponses.OrderByDescending(q => GetQuestionnaireResponseDate(q)))
                            {
                                <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                                        @onclick="() => ShowQuestionnaireResponse(qr)">
                                    <div>
                                        <div class="fw-bold">@(qr.Questionnaire ?? qr.Id ?? "Unnamed Questionnaire")</div>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3 me-1"></i>@GetQuestionnaireResponseDate(qr)
                                            @if (!string.IsNullOrEmpty(qr.Author?.Display))
                                            {
                                                <span class="ms-3">
                                                    <i class="bi bi-person me-1"></i>@qr.Author.Display
                                                </span>
                                            }
                                        </small>
                                    </div>
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        No questionnaire responses found.
                    </div>
                }
            </div>
        </div>
    }
    

</div>

@code {
    private bool isLoading = true;
    private AcpFormData? acpData;
    private List<QuestionnaireResponse> questionnaireResponses = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAcpData();
    }

    private async Task LoadAcpData()
    {
        isLoading = true;
        
        try
        {
            if (AppState.CurrentPatient == null) return;

            acpData = new AcpFormData();
            var keys = await LocalStorage.KeysAsync();

            // Load Patient (for legally capable extension)
            var patientKey = $"Patient-{AppState.CurrentPatient.Id}";
            var patientKeys = keys.Where(k => k.StartsWith(patientKey)).ToList();
            if (patientKeys.Any())
            {
                var json = await LocalStorage.GetItemAsStringAsync(patientKeys.First());
                if (!string.IsNullOrEmpty(json))
                {
                    var parser = new FhirJsonParser();
                    acpData.Patient = parser.Parse<Patient>(json);
                }
            }
            
            // If Patient not in storage, use current patient from AppState
            if (acpData.Patient == null)
            {
                acpData.Patient = AppState.CurrentPatient;
            }

            // Load Procedure (ACP procedure with encounter reference)
            var procedureKeys = keys.Where(k => k.StartsWith("Procedure-")).ToList();
            if (procedureKeys.Any())
            {
                var json = await LocalStorage.GetItemAsStringAsync(procedureKeys.First());
                if (!string.IsNullOrEmpty(json))
                {
                    var parser = new FhirJsonParser();
                    acpData.Procedure = parser.Parse<Procedure>(json);
                }
            }

            // Load Encounter (from the _include in procedure query or direct)
            var encounterKeys = keys.Where(k => k.StartsWith("Encounter-")).ToList();
            if (encounterKeys.Any())
            {
                var json = await LocalStorage.GetItemAsStringAsync(encounterKeys.First());
                if (!string.IsNullOrEmpty(json))
                {
                    var parser = new FhirJsonParser();
                    acpData.Encounter = parser.Parse<Encounter>(json);
                }
            }
            
            // Load QuestionnaireResponses
            var qrKeys = keys.Where(k => k.StartsWith("QuestionnaireResponse-")).ToList();
            foreach (var key in qrKeys)
            {
                try
                {
                    var json = await LocalStorage.GetItemAsStringAsync(key);
                    if (!string.IsNullOrEmpty(json))
                    {
                        var parser = new FhirJsonParser();
                        var qr = parser.Parse<QuestionnaireResponse>(json);
                        questionnaireResponses.Add(qr);
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error parsing QuestionnaireResponse {key}: {ex.Message}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading ACP data: {ex.Message}");
        }

        isLoading = false;
    }

    private void ShowQuestionnaireResponse(QuestionnaireResponse qr)
    {
        Navigation.NavigateTo($"/acp/QuestionnaireResponse/{qr.Id}");
    }
    
    private string GetQuestionnaireResponseDate(QuestionnaireResponse qr)
    {
        if (!string.IsNullOrEmpty(qr.Authored))
        {
            if (DateTime.TryParse(qr.Authored, out var date))
            {
                return date.ToString("dd-MM-yyyy HH:mm");
            }
        }
        return "Unknown date";
    }

    private string GetPatientName()
    {
        var patient = acpData?.Patient ?? AppState.CurrentPatient;
        if (patient?.Name?.FirstOrDefault() is HumanName name)
        {
            var given = string.Join(" ", name.Given ?? new string[0]);
            return $"{given} {name.Family}".Trim();
        }
        return "Unknown";
    }

    private string GetPatientBirthDate()
    {
        var patient = acpData?.Patient ?? AppState.CurrentPatient;
        if (!string.IsNullOrEmpty(patient?.BirthDate))
        {
            if (DateTime.TryParse(patient.BirthDate, out var date))
            {
                return date.ToString("dd-MM-yyyy");
            }
        }
        return "Unknown";
    }

    private string GetEncounterDate()
    {
        // Priority 1: Encounter period start
        if (acpData?.Encounter?.Period?.Start != null)
        {
            if (DateTime.TryParse(acpData.Encounter.Period.Start, out var date))
            {
                return date.ToString("dd-MM-yyyy");
            }
        }
        
        // Priority 2: Procedure performed date
        if (acpData?.Procedure?.Performed is FhirDateTime dt)
        {
            if (DateTime.TryParse(dt.Value, out var date))
            {
                return date.ToString("dd-MM-yyyy");
            }
        }
        
        return "-";
    }

    private string GetParticipants()
    {
        // Priority 1: Encounter participants
        if (acpData?.Encounter?.Participant?.Any() == true)
        {
            var participants = acpData.Encounter.Participant
                .Select(p => p.Individual?.Display)
                .Where(d => !string.IsNullOrEmpty(d));
            var result = string.Join(", ", participants);
            if (!string.IsNullOrEmpty(result)) return result;
        }
        
        // Priority 2: Procedure performers
        if (acpData?.Procedure?.Performer?.Any() == true)
        {
            var participants = acpData.Procedure.Performer
                .Select(p => p.Actor?.Display)
                .Where(d => !string.IsNullOrEmpty(d));
            return string.Join(", ", participants);
        }
        
        return string.Empty;
    }

    private (bool? isCapable, string? comment) GetLegallyCapableInfo()
    {
        var patient = acpData?.Patient;
        if (patient == null) return (null, null);

        var ext = patient.Extension?.FirstOrDefault(e => 
            e.Url == "https://api.iknl.nl/docs/pzp/r4/StructureDefinition/ext-LegallyCapable-MedicalTreatmentDecisions");

        if (ext == null) return (null, null);

        var capableExt = ext.Extension?.FirstOrDefault(e => e.Url == "legallyCapable");
        var commentExt = ext.Extension?.FirstOrDefault(e => e.Url == "legallyCapableComment");

        bool? capable = capableExt?.Value is FhirBoolean fb ? fb.Value : null;
        string? comment = commentExt?.Value is FhirString fs ? fs.Value : null;

        return (capable, comment);
    }

    private string GetLegallyCapableText()
    {
        var (capable, _) = GetLegallyCapableInfo();
        return capable switch
        {
            true => "Wilsbekwaam",
            false => "Niet wilsbekwaam",
            null => "Status onbekend"
        };
    }

    private string GetLegallyCapableComment()
    {
        var (_, comment) = GetLegallyCapableInfo();
        return comment ?? string.Empty;
    }

    private string GetLegallyCapableClass()
    {
        var (capable, _) = GetLegallyCapableInfo();
        return capable switch
        {
            true => "bg-success-subtle border-success",
            false => "bg-danger-subtle border-danger",
            null => "bg-warning-subtle border-warning"
        };
    }

    private string GetLegallyCapableIcon()
    {
        var (capable, _) = GetLegallyCapableInfo();
        return capable switch
        {
            true => "bi bi-check-circle-fill text-success",
            false => "bi bi-x-circle-fill text-danger",
            null => "bi bi-question-circle-fill text-warning"
        };
    }

    private class AcpFormData
    {
        public Patient? Patient { get; set; }
        public Procedure? Procedure { get; set; }
        public Encounter? Encounter { get; set; }
    }
}
