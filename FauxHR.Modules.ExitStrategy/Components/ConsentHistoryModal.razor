@using Hl7.Fhir.Model
@using FauxHR.Modules.ExitStrategy.Helpers

<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Geschiedenis: @Title</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body p-0">
                @if (Consents.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Consents)
                        {
                            <li class="list-group-item p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <div class="fw-bold">
                                            @(item.Provision?.Code?.FirstOrDefault()?.Coding?.FirstOrDefault()?.Display ?? item.Provision?.Code?.FirstOrDefault()?.Text ?? "Onbekend doel")
                                        </div>
                                        <div class="small text-muted mt-1">
                                            <i class="bi bi-gear me-1"></i>
                                            Besluit: @(item.Provision?.Type?.ToString() ?? "Anders")
                                        </div>
                                    </div>
                                    <div class="text-end text-muted small">
                                        @(!string.IsNullOrEmpty(item.DateTime) ? DateTime.Parse(item.DateTime).ToString("d MMM yyyy") : "Datum onbekend")
                                    </div>
                                </div>


                                @if (!string.IsNullOrEmpty(item.Meta?.Source))
                                {
                                     <div class="small text-muted mt-2">
                                        <i class="bi bi-hdd-network me-1"></i>
                                        Bron: @SourceDisplayHelper.GetSourceLabel(item.Meta.Source)
                                    </div>
                                }

                                @if (item.Provision?.Actor != null && item.Provision.Actor.Any())
                                {
                                    <div class="border-top pt-2 mt-2">
                                        <small class="text-muted d-block mb-1 fw-bold">Betrokkenen:</small>
                                        @foreach (var actor in item.Provision.Actor)
                                        {
                                            <span class="badge bg-light text-dark border me-1 mb-1">
                                                @(actor.Reference?.Display ?? actor.Reference?.Reference ?? "Onbekend/PatiÃ«nt")
                                            </span>
                                        }
                                    </div>
                                }

                                <!-- Technical Details -->
                                <details class="mt-3 pt-2 border-top text-muted bg-light p-2 rounded" style="font-size: 0.75rem;">
                                    <summary class="fw-bold mb-1" style="cursor: pointer;">Technische details</summary>
                                    <div class="d-flex justify-content-between mt-2">
                                        <span class="text-truncate me-2" title="@item.Id">ID: @item.Id</span>
                                        <span class="text-nowrap">Versie: @(item.Meta?.VersionId ?? "-")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mt-1">
                                        <span class="text-truncate" title="@(item.Meta?.LastUpdated?.ToString("o"))">Last Updated: @(item.Meta?.LastUpdated?.ToString("g") ?? "-")</span>
                                    </div>
                                    @if (item.Identifier.Any())
                                    {
                                        <div class="mt-1 text-break">
                                            IDs: @string.Join(", ", item.Identifier.Select(i => $"{i.System}|{i.Value}"))
                                        </div>
                                    }
                                </details>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="p-4 text-center text-muted">Geen historie gevonden.</div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public List<Consent> Consents { get; set; } = new();
    [Parameter] public EventCallback OnClose { get; set; }
}
