@using Hl7.Fhir.Model
@using FauxHR.Modules.ExitStrategy.Helpers

<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Geschiedenis Behandeldoelen</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body p-0">
                @if (Goals.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var goal in Goals.OrderByDescending(g => g.StatusDate))
                        {
                            <li class="list-group-item p-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-bold">
                                            @(goal.Description?.Coding?.FirstOrDefault()?.Display ?? goal.Description?.Text ?? "Onbekend doel")
                                        </div>
                                        <div class="small text-muted mt-1">
                                            <i class="bi bi-activity me-1"></i>Status: @(goal.LifecycleStatus?.ToString() ?? "-")
                                        </div>
                                    </div>
                                    <div class="text-end text-muted small">
                                        @(!string.IsNullOrEmpty(goal.StatusDate) ? DateTime.Parse(goal.StatusDate).ToString("d MMM yyyy") : "Datum onbekend")
                                    </div>
                                </div>

                                    @if (!string.IsNullOrEmpty(goal.Meta?.Source))
                                    {
                                        <div class="small text-muted mt-2">
                                            <i class="bi bi-hdd-network me-1"></i>
                                            Bron: @SourceDisplayHelper.GetSourceLabel(goal.Meta.Source)
                                        </div>
                                    }

                                    <!-- Technical Details -->
                                    <details class="mt-3 pt-2 border-top text-muted bg-light p-2 rounded" style="font-size: 0.75rem;">
                                        <summary class="fw-bold mb-1" style="cursor: pointer;">Technische details</summary>
                                        <div class="d-flex justify-content-between mt-2">
                                            <span class="text-truncate me-2" title="@goal.Id">ID: @goal.Id</span>
                                            <span class="text-nowrap">Versie: @(goal.Meta?.VersionId ?? "-")</span>
                                        </div>
                                        <div class="d-flex justify-content-between mt-1">
                                            <span class="text-truncate" title="@(goal.Meta?.LastUpdated?.ToString("o"))">Last Updated: @(goal.Meta?.LastUpdated?.ToString("g") ?? "-")</span>
                                        </div>
                                        @if (goal.Identifier.Any())
                                        {
                                            <div class="mt-1 text-break">
                                                IDs: @string.Join(", ", goal.Identifier.Select(i => $"{i.System}|{i.Value}"))
                                            </div>
                                        }
                                    </details>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="p-4 text-center text-muted">Geen historie gevonden.</div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public List<Goal> Goals { get; set; } = new();
    [Parameter] public EventCallback OnClose { get; set; }
}
