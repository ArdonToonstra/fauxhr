@using FauxHR.Modules.ExitStrategy.Models
@using Hl7.Fhir.Model
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<div class="card border-0 shadow-sm mb-4 bg-white">
    <div class="card-header bg-white border-bottom p-4 cursor-pointer hover-bg-light" @onclick="ToggleExpand">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-chevron-@(isExpanded ? "down" : "right") me-3 text-muted fs-5"></i>
                
                <div>
                    <h4 class="fw-bold mb-1 text-primary">
                        <i class="bi bi-chat-text-fill me-2"></i>ACP Gesprek
                    </h4>
                    <div class="text-muted">
                        <i class="bi bi-calendar-event me-2"></i>@Model.Date.ToString("d MMMM yyyy")
                    </div>
                </div>
            </div>
            
            <div class="d-flex align-items-center">
                 @if (!isExpanded)
                 {
                     <div class="text-muted small me-3 d-none d-md-block">
                         @(Model.Participants.Count) betrokkenen Â· @(Model.Observations.Count + Model.QuestionnaireResponses.Count) items
                     </div>
                 }
                <span class="badge bg-light text-dark border">
                    Status: @(Model.Encounter.Status?.ToString() ?? "Onbekend")
                </span>
            </div>
        </div>
    </div>
    
    @if (isExpanded)
    {
        <div class="card-body p-4 border-top">
            <div class="row g-4">
                <!-- Participants Column -->
                <div class="col-lg-5 border-end-md">
                    <h6 class="text-uppercase text-muted small fw-bold mb-3">Betrokkenen</h6>
                    
                    <div class="mb-4">
                        <label class="text-muted small d-block mb-2">Gesprek gevoerd door (zorgverlener)</label>
                        @{
                            var professionals = Model.Participants.Where(p => p.IsPractitioner).ToList();
                            if (professionals.Any())
                            {
                                <div class="d-flex flex-column gap-2">
                                    @foreach (var p in professionals)
                                    {
                                        <div class="d-flex align-items-center p-2 rounded bg-light border cursor-pointer hover-shadow" @onclick="() => OnShowParticipant.InvokeAsync(p)" @onclick:stopPropagation="true">
                                            <div class="bg-white rounded-circle p-2 me-2 border text-primary">
                                                <i class="bi bi-person-fill-gear"></i>
                                            </div>
                                            <div class="overflow-hidden">
                                                <div class="fw-bold text-truncate">@p.Display</div>
                                                @if(!string.IsNullOrEmpty(p.Role)) { <small class="text-muted d-block text-truncate">@p.Role</small> }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted fst-italic small">Geen zorgverlener geregistreerd</span>
                            }
                        }
                    </div>

                    <div>
                        <label class="text-muted small d-block mb-2">Gesprek in bijzijn van (naasten)</label>
                            @{
                            var others = Model.Participants.Where(p => !p.IsPractitioner).ToList();
                            if (others.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var p in others)
                                    {
                                            <button class="btn btn-sm btn-outline-secondary rounded-pill" @onclick="() => OnShowParticipant.InvokeAsync(p)" @onclick:stopPropagation="true">
                                            <i class="bi bi-people me-1"></i>@p.Display
                                        </button>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted fst-italic small">-</span>
                            }
                        }
                    </div>
                </div>

                <!-- Resources Column -->
                <div class="col-lg-7">
                    <h6 class="text-uppercase text-muted small fw-bold mb-3">Gekoppelde Informatie</h6>
                        
                    <!-- Questionnaire Responses -->
                    @if (Model.QuestionnaireResponses.Any())
                    {
                        <div class="mb-3">
                            <div class="list-group">
                                @foreach (var qr in Model.QuestionnaireResponses)
                                {
                                        <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-0 bg-light mb-2 rounded"
                                            @onclick="() => OnShowQuestionnaire.InvokeAsync(qr)" @onclick:stopPropagation="true">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-text me-3 fs-5 text-primary"></i>
                                            <div>
                                                <div class="fw-bold text-dark">@(qr.Identifier?.Value ?? "Ingevuld formulier")</div>
                                                <small class="text-muted">
                                                    Laatst gewijzigd: @(qr.Authored != null ? DateTime.Parse(qr.Authored).ToString("g") : "-")
                                                </small>
                                            </div>
                                        </div>
                                        <i class="bi bi-chevron-right text-muted"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    }
                    
                    <!-- Observations -->
                    @if (Model.Observations.Any())
                    {
                        <div class="mb-4">
                            <label class="text-muted small d-block mb-2">Bevindingen &amp; Wensen</label>
                            <div class="d-flex flex-column gap-3">
                            @foreach (var obs in Model.Observations)
                            {
                                <div class="bg-light p-3 rounded border">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="fw-bold text-dark mb-0">@GetObservationLabel(obs)</h6>
                                        @if(obs.Effective is FhirDateTime dt)
                                        {
                                            <span class="badge bg-white text-muted border">@dt.Value</span>
                                        }
                                    </div>

                                    <!-- Value -->
                                    @if (obs.Value != null)
                                    {
                                        <div class="mb-2">
                                            @if (obs.Value is CodeableConcept cc)
                                            {
                                                <span class="fw-medium text-primary">
                                                    @(cc.Coding?.FirstOrDefault()?.Display ?? cc.Text ?? cc.Coding?.FirstOrDefault()?.Code ?? "-")
                                                </span>
                                            }
                                            else if (obs.Value is FhirString s)
                                            {
                                                 <span class="text-dark fst-italic">"@s.Value"</span>
                                            }
                                            else
                                            {
                                                 <span>@obs.Value.ToString()</span>
                                            }
                                        </div>
                                    }
                                    
                                    <!-- Method -->
                                    @if (obs.Method != null)
                                    {
                                        <div class="text-muted small mb-1">
                                            <i class="bi bi-gear me-1"></i>
                                            Methode: @(obs.Method.Coding?.FirstOrDefault()?.Display ?? obs.Method.Text)
                                        </div>
                                    }

                                    <!-- Note -->
                                    @if (obs.Note.Any())
                                    {
                                        <div class="mt-2 pt-2 border-top small text-muted">
                                            @foreach(var note in obs.Note)
                                            {
                                                 <div><i class="bi bi-chat-square-text me-1"></i>@note.Text</div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                            </div>
                        </div>
                    }

                    <!-- Reason / Procedure Code -->
                    @if (Model.Procedure != null)
                    {
                        <div class="bg-light p-3 rounded">
                            <div class="small text-muted mb-1">Reden van contact (Verrichting)</div>
                            <div class="fw-medium">
                                @(Model.Procedure.Code?.Coding?.FirstOrDefault()?.Display ?? Model.Procedure.Code?.Text ?? "Proactieve zorgplanning")
                            </div>
                            @if (Model.Procedure.Note.Any())
                            {
                                <div class="mt-2 small border-top pt-2">
                                    <div class="fw-bold text-muted">Notities:</div>
                                    @foreach(var note in Model.Procedure.Note)
                                    {
                                        <div>@note.Text</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public AcpEncounterViewModel Model { get; set; } = default!;

    [Parameter]
    public EventCallback<ParticipantInfo> OnShowParticipant { get; set; }

    [Parameter]
    public EventCallback<QuestionnaireResponse> OnShowQuestionnaire { get; set; }
    
    private bool isExpanded = false; // Default closed
    
    private void ToggleExpand()
    {
        isExpanded = !isExpanded;
    }

    private string GetObservationLabel(Observation obs)
    {
        var coding = obs.Code?.Coding?.FirstOrDefault();
        if (coding == null) return "Observation";

        if (!string.IsNullOrEmpty(coding.Display)) return coding.Display;
        
        // Fallback: System + Code
        return $"{coding.System} {coding.Code}";
    }
}
