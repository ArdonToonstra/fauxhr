@using Hl7.Fhir.Model
@using FauxHR.Modules.ExitStrategy.Models

<div class="card border-0 shadow-sm mb-5 bg-white">
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-4">
                <div class="d-flex align-items-center mb-3 h-100">
                    <div class="bg-primary-subtle text-primary rounded-circle p-3 me-3">
                        <i class="bi bi-person-vcard fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">@PatientName</h5>
                        <div class="text-muted small">PatiÃ«nt</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="border rounded p-3 h-100 cursor-pointer hover-bg-light position-relative" @onclick="OnShowGoalHistory">
                    <div class="d-flex align-items-center">
                        <div class="bg-info-subtle text-info-emphasis rounded-circle p-3 me-3">
                            <i class="bi bi-flag fs-4"></i>
                        </div>
                        <div>
                            <div class="fw-bold">
                                @(LatestGoal?.Description?.Coding?.FirstOrDefault()?.Display ?? LatestGoal?.Description?.Text ?? "Geen doel bekend")
                            </div>
                            @if (LatestGoal != null)
                            {
                                <small class="text-muted d-block mt-1">
                                    @(!string.IsNullOrEmpty(LatestGoal.StatusDate) ? DateTime.Parse(LatestGoal.StatusDate).ToString("d MMM yyyy") : "-")
                                </small>
                            }
                            <div class="small text-muted mt-1">Behandeldoel</div>
                        </div>
                        <i class="bi bi-chevron-right position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="border rounded p-3 @LegallyCapableClass h-100 d-flex align-items-center">
                    <i class="@LegallyCapableIcon me-3 fs-3"></i>
                    <div>
                        <div class="fw-bold">@LegallyCapableText</div>
                        @if (!string.IsNullOrEmpty(LegallyCapableComment))
                        {
                            <small class="text-muted d-block mt-1">@LegallyCapableComment</small>
                        }
                        <div class="small text-muted mt-1">Wilsbekwaamheid</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string PatientName { get; set; } = "Unknown";
    [Parameter] public Goal? LatestGoal { get; set; }
    [Parameter] public EventCallback OnShowGoalHistory { get; set; }
    [Parameter] public string LegallyCapableText { get; set; } = "Status onbekend";
    [Parameter] public string LegallyCapableComment { get; set; } = "";
    [Parameter] public string LegallyCapableClass { get; set; } = "bg-warning-subtle border-warning text-warning-emphasis";
    [Parameter] public string LegallyCapableIcon { get; set; } = "bi bi-question-circle-fill text-warning";
}
