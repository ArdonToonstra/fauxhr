@using FauxHR.Core.Interfaces
@inject IEnumerable<IIGModule> Modules

<div class="nav-header px-4 py-3 d-none d-md-block">
    <a href="" class="d-flex align-items-center text-decoration-none">
        <img src="images/logo.png" alt="FauxHR" height="45" />
    </a>
</div>

<div class="nav-scrollable">
    <div class="nav-items pt-3">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-grid-fill me-3" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        
        <div class="nav-item px-3 mt-4 mb-2">
            <span class="text-secondary text-uppercase small fw-bold px-3">Components</span>
        </div>

        @foreach (var module in Modules)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@module.EntryPath">
                    <span class="@module.IconClass me-3" aria-hidden="true"></span> @module.Title
                </NavLink>
            </div>
        }
    </div>

    <div class="nav-footer">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/settings">
                <span class="bi bi-gear me-3" aria-hidden="true"></span> Settings
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link nav-link-secondary" href="/user">
                <span class="bi bi-person-circle me-3" aria-hidden="true"></span> User
            </NavLink>
        </div>
    </div>
</div>
